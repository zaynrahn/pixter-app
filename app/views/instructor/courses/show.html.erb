<br/>
<div class="booyah_box col-10 offset-1">
  <h3 class="text-center"><%= current_course.title %></h3>
  <br/>
  <%= image_tag current_course.image, class: 'img-fluid' %>
  <br/>
  <br/>
  <div class="row">
    <div class="text-center col-8">
      <%= link_to 'Create a New Section...', new_instructor_course_section_path(current_course), class: 'btn btn-success btn-lg' %>
    </div>
    <div class="text-center col-4">
      <%= link_to 'Preview As a Student...', course_path(current_course), class: 'btn btn-warning' %>
    </div>
    <br class="clr" />
    <br/>
  </div>
  <br/>
  <br/>

  <ul>
    <% current_course.sections.each do |section| %>
      <li>
        <%= section.title %>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'float-right btn btn-primary btn-sm' %>
        <ul>
          <% section.lessons.rank(:row_order).each do |lesson| %>
            <li>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>  
        </ul>
        <br class="clr" />
      </li>
    <% end %>
  </ul>
</div>